@model IEnumerable<Categories>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <a href="/Category/Create" class="btn btn-primary">Yeni Kategori Ekle</a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Category_name)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Category_name</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Category_id" class="btn btn-primary">Düzenle</a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Category_id" class="btn btn-primary">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
