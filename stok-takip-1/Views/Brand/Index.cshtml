@model IEnumerable<Product_Brands>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <a href="/Brand/Create" class="btn btn-primary">Yeni Marka Ekle</a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Brand_Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Brand_Description)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Brand_Name</td>
                                <td>@item.Brand_Description</td>
                                <td>
                                    <a asp-controller="Brand" asp-action="Edit" class="btn btn-primary">Düzenle</a>
                                    <a asp-controller="Brand" asp-action="Delete" class="btn btn-primary">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
